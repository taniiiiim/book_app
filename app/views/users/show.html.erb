<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info1' %>
      </section>
      <section class="book_form">
        <%= render 'shared/book_form' %>
      </section>
    </aside>
  </aside>
  <div class="col-md-8">
    <% if @user.books.any? %>
      <h3>Books (<%= @user.books.count %>)</h3>
      <ol class="books">
        <%= render @books %>
      </ol>
      <%= will_paginate @books %>
    <% end %>
  </div>
</div>
